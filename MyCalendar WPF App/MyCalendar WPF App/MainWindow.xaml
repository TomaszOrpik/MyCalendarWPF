        <Button x:Name="AddNoteButton" Content="Button" Grid.Column="0" Grid.Row="2" Height="55" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5"  Click="AddNoteButton_Click">
        </Button>
        <Button x:Name="AddMailButton" Content="Button" Grid.Column="0" Grid.Row="3" Height="55" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Click="AddMailButton_Click">
